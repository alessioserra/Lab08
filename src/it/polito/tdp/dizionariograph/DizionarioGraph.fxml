<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="344.0" prefWidth="398.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.dizionariograph.DizionarioGraphController">
   <top>
      <Label alignment="CENTER" prefHeight="20.0" prefWidth="398.0" text="Lab08 - DizionarioGraph" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="5.0" top="5.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox prefHeight="306.0" prefWidth="398.0" BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label text="Inserire il numero di lettere: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="26.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtLettere">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Inserire una parola da cercare: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtCercare" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Button fx:id="btnGeneraGrafo" mnemonicParsing="false" onAction="#doGrafo" prefHeight="25.0" prefWidth="98.0" text="Genera Grafo">
                     <HBox.margin>
                        <Insets left="10.0" right="40.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnTrovaVicini" mnemonicParsing="false" onAction="#doTrovaVicini" prefHeight="25.0" prefWidth="88.0" text="Trova Vicini">
                     <HBox.margin>
                        <Insets right="40.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnGradoMax" mnemonicParsing="false" onAction="#doGradoMax" text="Trova Grado max">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="15.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <TextArea fx:id="txtResult" editable="false" prefHeight="163.0" prefWidth="398.0">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </TextArea>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Button fx:id="btnReset" mnemonicParsing="false" onAction="#doReset" text="Reset">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
